{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Flash",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"command": "openocd",
			"args": [
				"-f",
				"openocd.cfg",
				"-c",
				"adapter speed 5000; program ./Build/main.elf verify reset exit"
			],
			"dependsOn": ["Build"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
        },
        {
			"label": "Clean",
			"type": "shell",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
			"label": "Rebuild",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Clean", "Build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build (Dry Run)",
			"type": "shell",
			"command": "make -n -B -C src | grep -v 'mkdir -p'",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
    ]
}